# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/tgen-robotics

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# AWS S3 Configuration for Media Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tgen-robotics-hub

# Initial Admin User (optional - can also be set in server.js)
ADMIN_EMAIL=tgen.robotics@gmail.com
ADMIN_PASSWORD=Admin123!

# Email Configuration (for password reset and notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@tgenroboticshub.com